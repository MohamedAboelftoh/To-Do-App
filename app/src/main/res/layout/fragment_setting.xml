<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragments.SettingFragment">

    <TextView
        android:id="@+id/txt_language"
        style="@style/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/language_txt"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_language"
        style="@style/spinner_backGround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:entries="@array/language"
        android:paddingVertical="20dp"
        android:theme="@style/mySpinnerItemStyle"
        app:layout_constraintTop_toBottomOf="@id/txt_language" />

    <TextView
        android:id="@+id/txt_mode"
        style="@style/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/mode_txt"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_language" />

    <Spinner
        android:id="@+id/spinner_mode"
        style="@style/spinner_backGround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:entries="@array/mode"
        android:paddingVertical="20dp"
        android:theme="@style/mySpinnerItemStyle"
        app:layout_constraintTop_toBottomOf="@id/txt_mode" />
</androidx.constraintlayout.widget.ConstraintLayout>